<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:t="http://myfaces.apache.org/tomahawk"
      xmlns:ptp="http://parkcode.com.ua/facelets/ptp">


<ui:composition template="/WEB-INF/templates/template.xhtml">

    <ui:param name="pageId"    value="programlist" />
    <ui:param name="pageTitle" value="Список програм" />


    <ui:define name="body">
        <div class="centeredContent">
            <ptp:formTitle value="Список доступних програм" />

            <ptp:formErrorMessage provider="#{actualProgramAction}" />

            <div class="formContent">
                <h:form prependId="false">
                    <ui:repeat value="#{actualProgramAction.actualProgram}" var="program">
                        <div class="formLine programsLine">
                            <h:commandLink action="#{actualProgramAction.selectedProgram(program)}" >
                                #{program.name} (#{program.region})
                            </h:commandLink>

                            <ui:remove>
                                <div class="inputElem">
                                    <h:commandLink action="#{actualProgramAction.selectedProgram(program)}" >
                                        Вибрати
                                    </h:commandLink>
                                </div>
                            </ui:remove>
                        </div>
                    </ui:repeat>
            </h:form>
            </div>


        </div>
    </ui:define>

</ui:composition>

</html>